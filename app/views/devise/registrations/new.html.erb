<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if params[:plan] == '2' %>
        <h1 class="text-center blue-header-text">Full Account Sign Up Form</h1>
        <p class="text-center">Sign up for the full account for $10/month and get access to the community and contact information!</p>
      <% else %>
        <h1 class="text-center blue-header-text">Basic Account Sign Up Form</h1>
        <p class="text-center">Sign up for free and get basic access to the community.</p>
      <% end %>

    <br>
    
      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "full_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>

        <%= render "devise/shared/links" %>
        
      </div>
    </div>
  </div>
</div>